<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/drawerHeader"
    android:background="@color/white">

    <TextView
        android:id="@+id/topOfOrgList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/reg_org"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noOrgaizations"
        android:layout_below="@id/topOfOrgList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_org"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="17sp"
        android:textStyle="italic" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/topOfOrgList"
        android:id="@+id/organizationsListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</RelativeLayout>